@page "/ManageAccount"
@using Domain.Model
@using BlazorUI.Authentication
@inject IAuth authService


<div class="container mb-5" style="width: 100%; height: 400px">
  <div class="row">
    <div class="col-lg-12 mb-5 mb-lg-0">
      <RadzenCard>
        <img src="Skyscanner-Logo.png" style="width: 75px; height: 50px; margin: auto"/>
        <h1 style="margin: auto">Hello, @userLogged.FirstName</h1><br/><br/>
        <ul style="margin: auto">
          <div style="margin: auto;padding-bottom: 10px">
            <a href="EditAccount"><span>Edit Account</span></a>
          </div>
          <div style="margin: auto;padding-bottom: 10px">
            <a href="#"><span>Your Bookings</span></a>
          </div>
          <div style="margin: auto;padding-bottom: 10px">
            <a href="InfoAccount"><span>Account Information</span></a>
          </div>
        </ul>
      </RadzenCard>
    </div>
  </div>
  
</div>
@code {
  
  User userLogged = new User();
  
  protected override async Task OnInitializedAsync()
  {
    userLogged = await authService.GetUserFromCacheAsync();
  }
}