@using Domain.Model
<div class="form-row">
    <div class="form-group col">
        <label>Type</label>
        <InputText @bind-Value="additionalService.type" class="form-control">
        </InputText>
        <ValidationMessage For="@(() => additionalService.type)"/>
    </div>
    <div class="form-group col">
        <label>Price</label>
        <InputNumber @bind-Value="additionalService.price" class="form-control"/>
        <ValidationMessage For="@(() => additionalService.price)"/>
    </div>
    <div class="form-group col">
        <label>Currency</label>
        <InputText @bind-Value="additionalService.currency" class="form-control"/>
        <ValidationMessage For="@(() => additionalService.currency)"/>
    </div>
</div>

@code {
    [Parameter]
    public AdditionalService additionalService { get; set; } = new AdditionalService();
    
}